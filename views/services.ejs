<% const { navbar, service: {
  banner,
  introduction,
  bikeShowcase,
  easyPayment,
  metaverse,
} } = data; %>

<%- include('partials/header.ejs') %> <%- include('partials/navbar.ejs', { lang, data: navbar }) %>

<body class="services">
  <section class="banner page-section">
    <div class="container">
      <div class="row">
        <div class="col-12 col-md-8 col-lg-6">
          <h1 class="banner__title"><%= banner.title %></h1>
      
          <p class="banner__excerpt"><%- banner.excerpt %></p>
      
          <button type="button" class="banner__action-btn btn btn-primary"><%= banner.button %></button>
        </div>
      </div>
    </div>
  </section>

  <section class="introduction container page-section">
    <div class="row">
      <div class="col-md-7">
        <div class="introduction__info">
          <h2 class="introduction__info-title"><%= introduction.title %></h2>
    
          <p class="introduction__info-excerpt"><%- introduction.body %></p>
        </div>
      </div>

      <div class="col-md-5">
        <div class="introduction__art">
          <img src="/img/service-icon-globe.png" alt="Green Globe" class="introduction__art-img" />
        </div>
      </div>
    </div>
  </section>

  <section class="bike-showcase container page-section">
    <div class="row">
      <div class="col">
        <div class="bike-showcase__header">
          <h2 class="bike-showcase__title"><%= bikeShowcase.title %></h2>
          <p class="bike-showcase__subtitle"><%= bikeShowcase.subtitle %></p>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <div class="bike-showcase__img">
          <img src="/img/motor-viaje.png" alt="Motor Viaje">
        </div>
      </div>
    </div>

    <div class="row bike-showcase__features">
      <% const serviceIconName = lang === 'en' ? 'service-icon-bike-features-en.png' : 'service-icon-bike-features-id.png' %>

      <img src="/img/<%= serviceIconName %>" alt="Viaje Bike Features" class="bike-showcase__features-icons" />
    </div>
  </section>

  <section class="easy-payment page-section">
    <div class="container">
      <div class="row">
        <div class="col-12 col-md-5"></div>
  
        <div class="col-12 col-md-7">
          <div class="easy-payment__info">
            <h2 class="easy-payment__info-title"><%= easyPayment.title %></h2>
      
            <p class="easy-payment__info-excerpt"><%- easyPayment.body %></p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="metaverse page-section">
    <div class="container">
      <div class="row">
        <div class="col-12 col-md-7">
          <div class="metaverse__info">
            <h2 class="metaverse__info-title"><%= metaverse.title %></h2>
      
            <p class="metaverse__info-excerpt"><%- metaverse.body %></p>
          </div>
        </div>

        <div class="col-12 col-md-5"></div>
      </div>
    </div>
  </section>

<%- include('partials/footer.ejs', { lang }) %>
