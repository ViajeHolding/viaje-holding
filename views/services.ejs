<% const { navbar, footer, service: {
  banner,
  introduction,
  bikeShowcase,
  easyPayment,
  metaverse,
} } = data; %>

<%- include('partials/header.ejs') %> <%- include('partials/navbar.ejs', { lang, data: navbar }) %>

<body class="services <%= lang %>">
  <section class="banner page-banner page-section">
    <div class="container">
      <div class="row">
        <div class="col-12 col-md-8 col-lg-6 col-xxl-7">
          <h1 class="banner__title page-banner__title"><%= banner.title %></h1>
      
          <p class="banner__excerpt page-banner__excerpt"><%- banner.excerpt %></p>
      
          <button type="button" class="banner__action-btn page-banner__action-btn primary-btn btn"><%= banner.button %></button>
        </div>
      </div>
    </div>
  </section>

  <section class="introduction container page-section">
    <div class="row">
      <div class="col-md-7">
        <div class="introduction__info">
          <h2 class="introduction__info-title"><%= introduction.title %></h2>
    
          <p class="introduction__info-excerpt"><%- introduction.body %></p>
        </div>
      </div>

      <div class="col-md-5">
        <div class="introduction__art">
          <img src="/img/service-icon-globe.png" alt="Green Globe" class="introduction__art-img" />
        </div>
      </div>
    </div>
  </section>

  <section class="bike-showcase container-fluid page-section">
    <div class="row">
      <div class="col">
        <div class="bike-showcase__header">
          <h2 class="bike-showcase__title"><%= bikeShowcase.title %></h2>
          <p class="bike-showcase__subtitle"><%= bikeShowcase.subtitle %></p>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <div class="bike-showcase__img">
          <img src="/img/motor-viaje.png" alt="Motor Viaje">
        </div>
      </div>
    </div>

