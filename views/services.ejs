    <div class="row bike-showcase__features">
      <% 
        let serviceIconName = '';

        switch (lang) {
          case 'en':
            serviceIconName = 'service-icon-bike-features-en.png';
            break;

          case 'id':
            serviceIconName = 'service-icon-bike-features-id.png';
            break;

          case 'kr':
            serviceIconName = 'service-icon-bike-features-kr.png';
            break;
        
          default:
            serviceIconName = 'service-icon-bike-features-en.png';
            break;
        }
      %>
      <img src="/img/<%= serviceIconName %>" alt="Viaje Bike Features" class="bike-showcase__features-icons" />
    </div>
  </section>

  <section class="easy-payment page-section">
    <div class="container-fluid p-0">
      <div class="row">
        <div class="col">
          <img src="/img/viapoint-service.png" alt="Easy Payment" class="easy-payment__img">
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-12 col-md-5"></div>
  
        <div class="col-12 col-md-7">
          <div class="easy-payment__info">
            <h2 class="easy-payment__info-title"><%= easyPayment.title %></h2>
      
            <p class="easy-payment__info-excerpt"><%- easyPayment.body %></p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="metaverse page-section">
    <div class="container-fluid p-0">
      <div class="row">
        <div class="col">
          <img src="/img/service-icon-metaverse.png" alt="Metaverse" class="metaverse__img">
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-12 col-md-7">
          <div class="metaverse__info">
            <h2 class="metaverse__info-title"><%= metaverse.title %></h2>
      
            <p class="metaverse__info-excerpt"><%- metaverse.body %></p>
          </div>
        </div>

        <div class="col-12 col-md-5"></div>
      </div>
    </div>
  </section>

